@page
@model gestion_biblio.Pages.Reports.OverdueBooksModel
@{
    ViewData["Title"] = "Retards d'emprunts";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        vertical-align: middle;
    }

    .overdue-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .overdue-header {
        background: linear-gradient(135deg, #FFB6C1 0%, #FF9BAE 100%);
        color: #8B1538;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 21, 56, 0.3);
        text-align: center;
    }

    .overdue-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .overdue-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .overdue-stats {
        background: linear-gradient(135deg, #FFE4C4 0%, #FFF8DC 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
        border: 2px solid #FFB6C1;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #8B1538;
    }

    .stats-label {
        color: #A0522D;
        font-weight: 600;
    }

    .overdue-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .overdue-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .overdue-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .severity-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .severity-moderate {
        background-color: #FFD700;
        color: #856404;
        border: 2px solid #ffc107;
    }

    .severity-high {
        background-color: #FFB6C1;
        color: #8B1538;
        border: 2px solid #FF9BAE;
    }

    .severity-critical {
        background: linear-gradient(135deg, #FF6B6B 0%, #C92A2A 100%);
        color: white;
        border: 2px solid #C92A2A;
    }

    .card-header-section {
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #FFE4C4;
    }

    .book-title {
        color: #8B4513;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 10px;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .member-info {
        color: #A0522D;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 5px;
    }

    .card-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .detail-row {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #A0522D;
        font-size: 0.95rem;
    }

    .detail-label {
        font-weight: 600;
        color: #8B4513;
        min-width: 110px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .detail-value {
        flex: 1;
    }

    .date-overdue {
        color: #8B1538;
        font-weight: 700;
    }

    .days-late-box {
        background: linear-gradient(135deg, #FFB6C1 0%, #FFD1DC 100%);
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #FF9BAE;
        margin-top: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 700;
        color: #8B1538;
    }

    .days-number {
        font-size: 1.8rem;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #A0522D;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        color: #90EE90;
    }

    .empty-text {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2d5016;
    }

    .empty-description {
        font-size: 1rem;
        color: #A0522D;
        margin-top: 10px;
    }

    @@media (max-width: 768px) {
        .overdue-title {
            font-size: 1.8rem;
            flex-direction: column;
            gap: 10px;
        }

        .overdue-grid {
            grid-template-columns: 1fr;
        }

        .severity-badge {
            position: static;
            margin-bottom: 15px;
            width: fit-content;
        }
    }
</style>

<div class="overdue-container">
    <!-- Header -->
    <div class="overdue-header">
        <h1 class="overdue-title">
            <span class="material-symbols-outlined" style="font-size: 3rem;">warning</span>
            <span>Livres en Retard</span>
        </h1>
        <p class="overdue-subtitle">Emprunts dont la date d'échéance est dépassée</p>
    </div>

    @if (Model.Overdues.Any())
    {
        <!-- Statistiques -->
        <div class="overdue-stats">
            <div class="stats-number">@Model.Overdues.Count</div>
            <div class="stats-label">Emprunt@(Model.Overdues.Count > 1 ? "s" : "") en retard</div>
        </div>

        <!-- Grille de cartes -->
        <div class="overdue-grid">
            @foreach (var record in Model.Overdues)
            {
                var daysLate = (DateTime.UtcNow.Date - record.DueDate.Date).Days;
                var severityClass = daysLate <= 7 ? "severity-moderate" : (daysLate <= 14 ? "severity-high" : "severity-critical");
                var severityText = daysLate <= 7 ? "Modéré" : (daysLate <= 14 ? "Important" : "Critique");
                
                <div class="overdue-card">
                    <span class="severity-badge @severityClass">
                        <span class="material-symbols-outlined" style="font-size: 18px;">priority_high</span>
                        <span>@severityText</span>
                    </span>

                    <div class="card-header-section">
                        <h3 class="book-title">@(record.Book?.Title ?? "Livre inconnu")</h3>
                        <div class="member-info">
                            <span class="material-symbols-outlined" style="font-size: 18px;">person</span>
                            <span><strong>@(record.Member?.FirstName ?? "") @(record.Member?.LastName ?? "")</strong></span>
                        </div>
                        <div class="member-info">
                            <span class="material-symbols-outlined" style="font-size: 18px;">mail</span>
                            <span>@(record.Member?.Email ?? "-")</span>
                        </div>
                    </div>

                    <div class="card-details">
                        <div class="detail-row">
                            <div class="detail-label">
                                <span class="material-symbols-outlined" style="font-size: 18px;">calendar_today</span>
                                <span>Emprunté le</span>
                            </div>
                            <div class="detail-value">@record.IssueDate.ToString("dd/MM/yyyy")</div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-label">
                                <span class="material-symbols-outlined" style="font-size: 18px;">event</span>
                                <span>Échéance</span>
                            </div>
                            <div class="detail-value date-overdue">
                                @record.DueDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>

                    <div class="days-late-box">
                        <span class="material-symbols-outlined" style="font-size: 28px;">schedule</span>
                        <div>
                            <span class="days-number">@daysLate</span>
                            <span>jour@(daysLate > 1 ? "s" : "") de retard</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <span class="material-symbols-outlined" style="font-size: 5rem;">check_circle</span>
            </div>
            <div class="empty-text">
                Aucun livre en retard !
            </div>
            <div class="empty-description">
                Tous les emprunts sont à jour. Excellent travail !
            </div>
        </div>
    }
</div>