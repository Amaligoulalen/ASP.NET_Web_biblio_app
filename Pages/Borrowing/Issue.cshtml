@page
@model gestion_biblio.Pages.Borrowing.IssueModel
@{
    ViewData["Title"] = "Emprunter un livre";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        vertical-align: middle;
    }

    .issue-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .issue-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(160, 82, 45, 0.15);
        overflow: hidden;
        border: 2px solid #FFE4C4;
    }

    .issue-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 30px;
        text-align: center;
    }

    .issue-title {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .issue-subtitle {
        font-size: 1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .issue-body {
        padding: 40px;
    }

    .form-section {
        margin-bottom: 30px;
    }

    .section-title {
        color: #8B4513;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #D2B48C;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-label {
        color: #8B4513;
        font-weight: 600;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control, .form-select {
        border: 2px solid #D2B48C;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        background-color: #FFF8DC;
        color: #8B4513;
    }

    .form-control:focus, .form-select:focus {
        border-color: #A0522D;
        box-shadow: 0 0 0 0.2rem rgba(160, 82, 45, 0.15);
        background-color: #FFFFFF;
    }

    .validation-summary {
        background: linear-gradient(135deg, #FFB6C1 0%, #FFD1DC 100%);
        color: #8B1538;
        padding: 15px 20px;
        border-radius: 10px;
        border: 2px solid #FF9BAE;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .text-danger {
        color: #8B1538 !important;
        font-size: 0.875rem;
        margin-top: 5px;
    }

    .info-box {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 15px;
        border-radius: 10px;
        border-left: 4px solid #A0522D;
        margin-bottom: 20px;
        color: #8B4513;
        display: flex;
        align-items: start;
        gap: 10px;
    }

    .info-box .material-symbols-outlined {
        font-size: 24px;
        margin-top: 2px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: space-between;
        margin-top: 30px;
        padding-top: 30px;
        border-top: 2px solid #FFE4C4;
        flex-wrap: wrap;
    }

    .btn-custom {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        border: 2px solid;
        cursor: pointer;
    }

    .btn-confirm {
        background: linear-gradient(135deg, #90EE90 0%, #78c878 100%);
        color: #2d5016;
        border-color: #78c878;
    }

    .btn-confirm:hover {
        background: linear-gradient(135deg, #78c878 0%, #90EE90 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(45, 80, 22, 0.3);
    }

    .btn-back {
        background-color: #F5F5DC;
        color: #8B4513;
        border-color: #D2B48C;
    }

    .btn-back:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(160, 82, 45, 0.2);
        color: #8B4513;
        text-decoration: none;
    }

    .date-info {
        background-color: #FFF8DC;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #D2B48C;
        font-size: 0.9rem;
        color: #A0522D;
        margin-top: 8px;
    }

    @@media (max-width: 768px) {
        .issue-title {
            font-size: 1.5rem;
        }

        .issue-body {
            padding: 20px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-custom {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="issue-container">
    <div class="issue-card">
        <div class="issue-header">
            <h1 class="issue-title">
                <span class="material-symbols-outlined" style="font-size: 2.5rem;">library_add</span>
                <span>Emprunter un Livre</span>
            </h1>
            <p class="issue-subtitle">Enregistrez un nouvel emprunt de livre</p>
        </div>

        <div class="issue-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary">
                    <span class="material-symbols-outlined">error</span>
                    <span>Veuillez corriger les erreurs ci-dessous</span>
                </div>

                <div class="info-box">
                    <span class="material-symbols-outlined">info</span>
                    <div>
                        <strong>Durée d'emprunt par défaut :</strong> 14 jours. Les dates peuvent être ajustées ci-dessous.
                    </div>
                </div>

                <!-- Sélection Membre et Livre -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span class="material-symbols-outlined">badge</span>
                        <span>Informations d'emprunt</span>
                    </h2>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="BorrowRecord.MemberID" class="form-label">
                                <span class="material-symbols-outlined">person</span>
                                <span>Membre</span>
                            </label>
                            <select asp-for="BorrowRecord.MemberID" 
                                    class="form-select" 
                                    asp-items="Model.MemberOptions">
                                <option value="">-- Sélectionnez un membre --</option>
                            </select>
                            <span asp-validation-for="BorrowRecord.MemberID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="BorrowRecord.BookID" class="form-label">
                                <span class="material-symbols-outlined">menu_book</span>
                                <span>Livre</span>
                            </label>
                            <select asp-for="BorrowRecord.BookID" 
                                    class="form-select" 
                                    asp-items="Model.BookOptions">
                                <option value="">-- Sélectionnez un livre --</option>
                            </select>
                            <span asp-validation-for="BorrowRecord.BookID" class="text-danger"></span>
                            <div class="date-info">
                                <span class="material-symbols-outlined" style="font-size: 16px;">inventory</span>
                                Le nombre entre parenthèses indique les exemplaires disponibles
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dates -->
                <div class="form-section">
                    <h2 class="section-title">
                        <span class="material-symbols-outlined">calendar_month</span>
                        <span>Dates d'emprunt</span>
                    </h2>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="BorrowRecord.IssueDate" class="form-label">
                                <span class="material-symbols-outlined">calendar_today</span>
                                <span>Date d'emprunt</span>
                            </label>
                            <input asp-for="BorrowRecord.IssueDate" 
                                   class="form-control" 
                                   type="date" />
                            <span asp-validation-for="BorrowRecord.IssueDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="BorrowRecord.DueDate" class="form-label">
                                <span class="material-symbols-outlined">event</span>
                                <span>Date de retour prévue</span>
                            </label>
                            <input asp-for="BorrowRecord.DueDate" 
                                   class="form-control" 
                                   type="date" />
                            <span asp-validation-for="BorrowRecord.DueDate" class="text-danger"></span>
                            <div class="date-info">
                                <span class="material-symbols-outlined" style="font-size: 16px;">schedule</span>
                                Des frais de retard peuvent s'appliquer après cette date
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Boutons d'action -->
                <div class="action-buttons">
                    <a asp-page="/Books/Index" class="btn-custom btn-back">
                        <span class="material-symbols-outlined">arrow_back</span>
                        <span>Retour aux livres</span>
                    </a>
                    <button type="submit" class="btn-custom btn-confirm">
                        <span class="material-symbols-outlined">check_circle</span>
                        <span>Confirmer l'emprunt</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { 
    <partial name="_ValidationScriptsPartial" /> 
}