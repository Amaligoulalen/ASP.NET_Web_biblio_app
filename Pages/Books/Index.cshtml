@page
@model gestion_biblio.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Livres";
}

<style>
    .books-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .books-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 69, 19, 0.3);
        text-align: center;
    }

    .books-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .books-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .search-section {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
    }

    .search-label {
        color: #8B4513;
        font-weight: 600;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-input {
        border: 2px solid #D2B48C;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        background-color: #FFF8DC;
        color: #8B4513;
    }

    .search-input:focus {
        border-color: #A0522D;
        box-shadow: 0 0 0 0.2rem rgba(160, 82, 45, 0.15);
        background-color: #FFFFFF;
        outline: none;
    }

    .btn-search {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #8B4513;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-search:hover {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
        color: #FFF8DC;
    }

    .btn-add {
        background-color: #FFE4C4;
        color: #8B4513;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #D2B48C;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
    }

    .btn-add:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(160, 82, 45, 0.2);
        color: #8B4513;
    }

    .books-stats {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #8B4513;
    }

    .stats-label {
        color: #A0522D;
        font-weight: 600;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .book-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .book-image-container {
        height: 250px;
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        font-size: 4rem;
        color: #A0522D;
    }

    .availability-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .available {
        background-color: #90EE90;
        color: #2d5016;
        border: 2px solid #78c878;
    }

    .limited {
        background-color: #FFE4C4;
        color: #A0522D;
        border: 2px solid #D2B48C;
    }

    .unavailable {
        background-color: #FFB6C1;
        color: #8B1538;
        border: 2px solid #FF9BAE;
    }

    .book-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .book-title {
        color: #8B4513;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 10px;
        line-height: 1.3;
        min-height: 2.6em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-author {
        color: #A0522D;
        font-size: 1rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .book-details {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 15px;
        flex: 1;
    }

    .book-detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #A0522D;
        font-size: 0.9rem;
    }

    .book-actions {
        display: flex;
        gap: 8px;
        margin-top: auto;
        padding-top: 15px;
        border-top: 2px solid #FFE4C4;
    }

    .btn-card {
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid;
        text-align: center;
        flex: 1;
    }

    .btn-details {
        background-color: #FFE4C4;
        color: #8B4513;
        border-color: #D2B48C;
    }

    .btn-details:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        color: #8B4513;
    }

    .btn-edit {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
        border-color: #8B4513;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        transform: translateY(-2px);
        color: #FFF8DC;
    }

    .btn-delete {
        background-color: #FFB6C1;
        color: #8B1538;
        border-color: #FF9BAE;
    }

    .btn-delete:hover {
        background-color: #FF9BAE;
        transform: translateY(-2px);
        color: #8B1538;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #A0522D;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .empty-text {
        font-size: 1.3rem;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .books-title {
            font-size: 1.8rem;
        }

        .books-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="books-container">
    <!-- Header -->
    <div class="books-header">
        <h1 class="books-title">üìö Catalogue de Livres</h1>
        <p class="books-subtitle">D√©couvrez notre collection compl√®te</p>
    </div>

    <!-- Recherche -->
    <div class="search-section">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="search-label">
                 
                    <span>Rechercher un livre</span>
                </label>
                <input name="q" 
                       value="@Model.Q" 
                       class="search-input form-control" 
                       placeholder="Titre, Auteur, ISBN, Cat√©gorie..." />
            </div>
            <div class="col-md-3">
                <button class="btn-search" type="submit">
                     Rechercher
                </button>
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
            {
                <div class="col-md-3">
                    <a class="btn-add" asp-page="/Books/Create">
                         Ajouter un livre
                    </a>
                </div>
            }
        </form>
    </div>

    <!-- Statistiques -->
    <div class="books-stats">
        <div class="stats-number">@Model.Books.Count</div>
        <div class="stats-label">Livre@(Model.Books.Count > 1 ? "s" : "") @(string.IsNullOrWhiteSpace(Model.Q) ? "au total" : "trouv√©(s)")</div>
    </div>

    @if (Model.Books.Any())
    {
        <!-- Grille de cartes -->
        <div class="books-grid">
            @foreach (var b in Model.Books)
            {
                <div class="book-card">
                    <div class="book-image-container">
                        @if (!string.IsNullOrEmpty(b.PicturePath))
                        {
                            <img src="~/images/@b.PicturePath" alt="@b.Title" class="book-image" />
                        }
                        else
                        {
                            <div class="no-image">üìñ</div>
                        }
                        
                        @if (b.AvailableCopies > 3)
                        {
                            <span class="availability-badge available">
                                ‚úì Disponible
                            </span>
                        }
                        else if (b.AvailableCopies > 0)
                        {
                            <span class="availability-badge limited">
                                ‚ö†Ô∏è Limit√©
                            </span>
                        }
                        else
                        {
                            <span class="availability-badge unavailable">
                                ‚úó Emprunt√©
                            </span>
                        }
                    </div>

                    <div class="book-content">
                        <h3 class="book-title">@b.Title</h3>
                        <div class="book-author">
                    
                            <span>@(b.Author != null ? $"{b.Author.FirstName} {b.Author.LastName}" : "Auteur inconnu")</span>
                        </div>

                        <div class="book-details">
                            <div class="book-detail-item">
                              
                                <span>Ann√©e: @b.PublicationYear</span>
                            </div>
                            <div class="book-detail-item">
                            
                                <span>ISBN: @b.ISBN</span>
                            </div>
                            @if (b.Category != null)
                            {
                                <div class="book-detail-item">
                                  
                                    <span>@b.Category.Name</span>
                                </div>
                            }
                            <div class="book-detail-item">
                          
                                <span>@b.AvailableCopies/@b.TotalCopies exemplaires</span>
                            </div>
                        </div>

                        <div class="book-actions">
                            <a class="btn-card btn-details" asp-page="/Books/Details" asp-route-id="@b.BookID">
                                 D√©tails
                            </a>
                            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                            {
                                <a class="btn-card btn-edit" asp-page="/Books/Edit" asp-route-id="@b.BookID">
                                     Modifier
                                </a>
                                <a class="btn-card btn-delete" asp-page="/Books/Delete" asp-route-id="@b.BookID">
                                    suprimer
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon"></div>
            <div class="empty-text">
                @if (string.IsNullOrWhiteSpace(Model.Q))
                {
                    <span>Aucun livre dans la biblioth√®que</span>
                }
                else
                {
                    <span>Aucun livre trouv√© pour "@Model.Q"</span>
                }
            </div>
        </div>
    }
</div>