@page
@model gestion_biblio.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Tableau de Bord Admin";
}

<style>
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 69, 19, 0.3);
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: radial-gradient(circle, rgba(160, 82, 45, 0.1) 0%, transparent 70%);
        transform: translate(30%, -30%);
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .stat-card.books {
        border-top: 4px solid #A0522D;
    }

    .stat-card.members {
        border-top: 4px solid #90EE90;
    }

    .stat-card.authors {
        border-top: 4px solid #87CEEB;
    }

    .stat-card.borrows {
        border-top: 4px solid #FFD700;
    }

    .stat-icon {
        font-size: 3rem;
        margin-bottom: 10px;
    }

    .stat-title {
        color: #A0522D;
        font-size: 0.95rem;
        font-weight: 600;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-number {
        color: #8B4513;
        font-size: 2.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .alert-overdue {
        background: linear-gradient(135deg, #FFB6C1 0%, #FFD1DC 100%);
        color: #8B1538;
        padding: 20px;
        border-radius: 12px;
        border: 2px solid #FF9BAE;
        margin-bottom: 30px;
        font-weight: 600;
    }

    .alert-overdue a {
        color: #8B1538;
        text-decoration: underline;
        font-weight: 700;
    }

    .quick-actions-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
    }

    .section-header {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        font-size: 1.2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .action-btn {
        padding: 15px 20px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s ease;
        border: 2px solid;
        text-align: center;
    }

    .action-btn.books {
        background-color: #FFE4C4;
        color: #8B4513;
        border-color: #D2B48C;
    }

    .action-btn.books:hover {
        background-color: #FFF8DC;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(160, 82, 45, 0.2);
        color: #8B4513;
    }

    .action-btn.members {
        background-color: #90EE90;
        color: #2d5016;
        border-color: #78c878;
    }

    .action-btn.members:hover {
        background-color: #a8f5a8;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(45, 80, 22, 0.2);
        color: #2d5016;
    }

    .action-btn.issue {
        background-color: #87CEEB;
        color: #1a5276;
        border-color: #5dade2;
    }

    .action-btn.issue:hover {
        background-color: #a0d8f0;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(26, 82, 118, 0.2);
        color: #1a5276;
    }

    .action-btn.return {
        background-color: #FFD700;
        color: #856404;
        border-color: #ffc107;
    }

    .action-btn.return:hover {
        background-color: #ffe066;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(133, 100, 4, 0.2);
        color: #856404;
    }

    .users-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
    }

    .table-container {
        overflow-x: auto;
        border-radius: 10px;
    }

    .users-table {
        width: 100%;
        margin: 0;
    }

    .users-table thead {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
    }

    .users-table thead th {
        padding: 15px;
        font-weight: 600;
        border: none;
        text-align: left;
    }

    .users-table tbody tr {
        border-bottom: 1px solid #FFE4C4;
        transition: all 0.3s ease;
    }

    .users-table tbody tr:hover {
        background-color: #FFF8DC;
    }

    .users-table tbody tr:last-child {
        border-bottom: none;
    }

    .users-table tbody td {
        padding: 15px;
        color: #8B4513;
        vertical-align: middle;
    }

    .badge-custom {
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
        margin-right: 5px;
    }

    .badge-admin {
        background-color: #FFB6C1;
        color: #8B1538;
        border: 2px solid #FF9BAE;
    }

    .badge-member {
        background-color: #87CEEB;
        color: #1a5276;
        border: 2px solid #5dade2;
    }

    .badge-librarian {
        background-color: #FFD700;
        color: #856404;
        border: 2px solid #ffc107;
    }

    .badge-none {
        background-color: #D3D3D3;
        color: #666;
        border: 2px solid #B0B0B0;
    }

    .status-yes {
        color: #2d5016;
        font-weight: 600;
    }

    .status-no {
        color: #8B1538;
        font-weight: 600;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #A0522D;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 1.8rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .actions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">
            <span>‚ö°</span>
            <span>Tableau de Bord Administrateur</span>
        </h1>
        <p class="dashboard-subtitle">Bienvenue, Administrateur ! Voici un aper√ßu de votre biblioth√®que</p>
    </div>

    <!-- Alerte livres en retard -->
    @if (Model.OverdueBooks > 0)
    {
        <div class="alert-overdue">
            <strong>‚ö†Ô∏è Attention :</strong> Il y a <strong>@Model.OverdueBooks</strong> livre@(Model.OverdueBooks > 1 ? "s" : "") en retard !
            <a asp-page="/Reports/OverdueBooks">Voir les d√©tails</a>
        </div>
    }

    <!-- Statistiques -->
    <div class="stats-grid">
        <div class="stat-card books">
            <div class="stat-icon">üìö</div>
            <div class="stat-title">Total Livres</div>
            <div class="stat-number">@Model.TotalBooks</div>
        </div>

        <div class="stat-card members">
            <div class="stat-icon"></div>
            <div class="stat-title">Membres Inscrits</div>
            <div class="stat-number">@Model.TotalMembers</div>
        </div>

        <div class="stat-card authors">
            <div class="stat-icon"></div>
            <div class="stat-title">Auteurs</div>
            <div class="stat-number">@Model.TotalAuthors</div>
        </div>

        <div class="stat-card borrows">
            <div class="stat-icon">üìñ</div>
            <div class="stat-title">Emprunts Actifs</div>
            <div class="stat-number">@Model.ActiveBorrows</div>
        </div>
    </div>

    <!-- Actions Rapides -->
    <div class="quick-actions-card">
        <div class="section-header">
            <span>‚ö°</span>
            <span>Actions Rapides</span>
        </div>
        <div class="actions-grid">
            <a asp-page="/Books/Index" class="action-btn books">
                <span>üìö</span>
                <span>G√©rer les Livres</span>
            </a>
            <a asp-page="/Members/Index" class="action-btn members">
             
                <span>G√©rer les Membres</span>
            </a>
            <a asp-page="/Borrowing/Issue" class="action-btn issue">
              
                <span>Emprunter un Livre</span>
            </a>
            <a asp-page="/Borrowing/Return" class="action-btn return">
             
                <span>Retourner un Livre</span>
            </a>
        </div>
    </div>

    <!-- Utilisateurs et R√¥les -->
    <div class="users-card">
        <div class="section-header">
         
            <span>Utilisateurs du Syst√®me & R√¥les</span>
        </div>
        
        @if (Model.AllUsers.Any())
        {
            <div class="table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th> Email</th>
                            <th> R√¥les</th>
                            <th>‚úì Email Confirm√©</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (user, index) in Model.AllUsers.Select((u, i) => (u, i + 1)))
                        {
                            <tr>
                                <td><strong>@index</strong></td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Roles.Contains("Admin"))
                                    {
                                        <span class="badge-custom badge-admin">Admin</span>
                                    }
                                    @if (user.Roles.Contains("Librarian"))
                                    {
                                        <span class="badge-custom badge-librarian">Biblioth√©caire</span>
                                    }
                                    @if (user.Roles.Contains("Member"))
                                    {
                                        <span class="badge-custom badge-member">Membre</span>
                                    }
                                    @if (string.IsNullOrEmpty(user.Roles))
                                    {
                                        <span class="badge-custom badge-none">Aucun r√¥le</span>
                                    }
                                </td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    {
                                        <span class="status-yes">‚úì Oui</span>
                                    }
                                    else
                                    {
                                        <span class="status-no">‚úó Non</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                Aucun utilisateur trouv√© dans le syst√®me.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh statistics every 30 seconds (optional)
        // setTimeout(() => location.reload(), 30000);
    </script>
}