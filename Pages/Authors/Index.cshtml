@page
@model gestion_biblio.Pages.Authors.IndexModel
@{
    ViewData["Title"] = "Auteurs";
}

<style>
    .authors-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .authors-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 69, 19, 0.3);
        text-align: center;
    }

    .authors-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .authors-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .search-section {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
    }

    .search-label {
        color: #8B4513;
        font-weight: 600;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-input {
        border: 2px solid #D2B48C;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
        background-color: #FFF8DC;
        color: #8B4513;
    }

    .search-input:focus {
        border-color: #A0522D;
        box-shadow: 0 0 0 0.2rem rgba(160, 82, 45, 0.15);
        background-color: #FFFFFF;
        outline: none;
    }

    .btn-search {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #8B4513;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-search:hover {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
        color: #FFF8DC;
    }

    .btn-add {
        background-color: #FFE4C4;
        color: #8B4513;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #D2B48C;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
    }

    .btn-add:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(160, 82, 45, 0.2);
        color: #8B4513;
    }

    .authors-stats {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #8B4513;
    }

    .stats-label {
        color: #A0522D;
        font-weight: 600;
    }

    .authors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .author-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .author-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .author-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #FFF8DC;
        margin-bottom: 15px;
        box-shadow: 0 3px 10px rgba(139, 69, 19, 0.3);
    }

    .author-name {
        color: #8B4513;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .author-info {
        color: #A0522D;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .author-actions {
        display: flex;
        gap: 8px;
        width: 100%;
        padding-top: 15px;
        border-top: 2px solid #FFE4C4;
        margin-top: auto;
    }

    .btn-action {
        padding: 8px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid;
        text-align: center;
        flex: 1;
    }

    .btn-details {
        background-color: #FFE4C4;
        color: #8B4513;
        border-color: #D2B48C;
    }

    .btn-details:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        color: #8B4513;
    }

    .btn-edit {
        background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
        color: #FFF8DC;
        border-color: #8B4513;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        transform: translateY(-2px);
        color: #FFF8DC;
    }

    .btn-delete {
        background-color: #FFB6C1;
        color: #8B1538;
        border-color: #FF9BAE;
    }

    .btn-delete:hover {
        background-color: #FF9BAE;
        transform: translateY(-2px);
        color: #8B1538;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #A0522D;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .empty-text {
        font-size: 1.3rem;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .authors-title {
            font-size: 1.8rem;
        }

        .authors-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="authors-container">
    <!-- Header -->
    <div class="authors-header">
        <h1 class="authors-title"> Liste des Auteurs</h1>
        <p class="authors-subtitle">D√©couvrez les auteurs de notre collection</p>
    </div>

    <!-- Recherche -->
    <div class="search-section">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-6">
                <label class="search-label">
                
                    <span>Rechercher un auteur</span>
                </label>
                <input name="q" 
                       value="@Model.Q" 
                       class="search-input form-control" 
                       placeholder="Nom ou pr√©nom de l'auteur..." />
            </div>
            <div class="col-md-3">
                <button class="btn-search" type="submit">
                     Rechercher
                </button>
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
            {
                <div class="col-md-3">
                    <a class="btn-add" asp-page="/Authors/Create">
                         Ajouter un auteur
                    </a>
                </div>
            }
        </form>
    </div>

    <!-- Statistiques -->
    <div class="authors-stats">
        <div class="stats-number">@Model.Authors.Count</div>
        <div class="stats-label">Auteur@(Model.Authors.Count > 1 ? "s" : "") @(string.IsNullOrWhiteSpace(Model.Q) ? "au total" : "trouv√©(s)")</div>
    </div>

    @if (Model.Authors.Any())
    {
        <!-- Grille d'auteurs -->
        <div class="authors-grid">
            @foreach (var author in Model.Authors)
            {
                <div class="author-card">
                    <div class="author-avatar">
                        @(author.FirstName.Substring(0, 1).ToUpper())@(author.LastName.Substring(0, 1).ToUpper())
                    </div>
                    <h3 class="author-name">
                        @author.FirstName @author.LastName
                    </h3>
                    <div class="author-info">
                        üìö @author.Books.Count livre@(author.Books.Count > 1 ? "s" : "")
                    </div>

                    <div class="author-actions">
                        <a class="btn-action btn-details" asp-page="/Authors/Details" asp-route-id="@author.AuthorID">
                             D√©tails
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                        {
                            <a class="btn-action btn-edit" asp-page="/Authors/Edit" asp-route-id="@author.AuthorID">
                                 Modifier
                            </a>
                            <a class="btn-action btn-delete" asp-page="/Authors/Delete" asp-route-id="@author.AuthorID">
                                supprimer
                                
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">üîç</div>
            <div class="empty-text">
                @if (string.IsNullOrWhiteSpace(Model.Q))
                {
                    <span>Aucun auteur enregistr√©</span>
                }
                else
                {
                    <span>Aucun auteur trouv√© pour "@Model.Q"</span>
                }
            </div>
        </div>
    }
</div>