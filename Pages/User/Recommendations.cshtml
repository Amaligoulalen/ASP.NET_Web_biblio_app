@page
@model gestion_biblio.Pages.User.RecommendationsModel
@{
    ViewData["Title"] = "Recommandations";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        vertical-align: middle;
    }

    .recommendations-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .recommendations-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 69, 19, 0.3);
        text-align: center;
    }

    .recommendations-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .recommendations-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .info-banner {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
        color: #8B4513;
    }

    .info-banner .material-symbols-outlined {
        font-size: 2rem;
    }

    .recommendations-stats {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #8B4513;
    }

    .stats-label {
        color: #A0522D;
        font-weight: 600;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .book-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .book-image-container {
        height: 250px;
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        font-size: 4rem;
        color: #A0522D;
    }

    .recommended-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.85rem;
        background: linear-gradient(135deg, #FFD700 0%, #FFC107 100%);
        color: #856404;
        border: 2px solid #ffc107;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .availability-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .available {
        background-color: #90EE90;
        color: #2d5016;
        border: 2px solid #78c878;
    }

    .limited {
        background-color: #FFE4C4;
        color: #A0522D;
        border: 2px solid #D2B48C;
    }

    .book-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .book-title {
        color: #8B4513;
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 10px;
        line-height: 1.3;
        min-height: 2.6em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-author {
        color: #A0522D;
        font-size: 1rem;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .book-details {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 15px;
        flex: 1;
    }

    .book-detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #A0522D;
        font-size: 0.9rem;
    }

    .book-actions {
        display: flex;
        gap: 8px;
        margin-top: auto;
        padding-top: 15px;
        border-top: 2px solid #FFE4C4;
    }

    .btn-card {
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid;
        text-align: center;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
    }

    .btn-details {
        background-color: #FFE4C4;
        color: #8B4513;
        border-color: #D2B48C;
    }

    .btn-details:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        color: #8B4513;
    }

    .btn-borrow {
        background: linear-gradient(135deg, #90EE90 0%, #78c878 100%);
        color: #2d5016;
        border-color: #78c878;
    }

    .btn-borrow:hover {
        background: linear-gradient(135deg, #78c878 0%, #90EE90 100%);
        transform: translateY(-2px);
        color: #2d5016;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #A0522D;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .empty-text {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .empty-description {
        font-size: 1rem;
        color: #A0522D;
        margin-bottom: 30px;
    }

    .btn-browse {
        background-color: #FFE4C4;
        color: #8B4513;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #D2B48C;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-browse:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(160, 82, 45, 0.2);
        color: #8B4513;
    }

    @@media (max-width: 768px) {
        .recommendations-title {
            font-size: 1.8rem;
            flex-direction: column;
            gap: 10px;
        }

        .books-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="recommendations-container">
    <!-- Header -->
    <div class="recommendations-header">
        <h1 class="recommendations-title">
            <span class="material-symbols-outlined" style="font-size: 3rem;">auto_awesome</span>
            <span>Recommandations pour vous</span>
        </h1>
        <p class="recommendations-subtitle">Découvrez des livres sélectionnés selon vos goûts</p>
    </div>

    <!-- Bannière d'information -->
    <div class="info-banner">
        <span class="material-symbols-outlined">lightbulb</span>
        <div>
            <strong>Comment ça marche ?</strong> Ces recommandations sont basées sur vos emprunts précédents, vos auteurs favoris et vos catégories préférées.
        </div>
    </div>

    @if (Model.RecommendedBooks.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon">
                <span class="material-symbols-outlined" style="font-size: 5rem;">book</span>
            </div>
            <div class="empty-text">
                Aucune recommandation disponible pour le moment
            </div>
            <div class="empty-description">
                Empruntez quelques livres pour que nous puissions vous proposer des recommandations personnalisées !
            </div>
            <a asp-page="/Books/Index" class="btn-browse">
                <span class="material-symbols-outlined">search</span>
                <span>Parcourir le catalogue</span>
            </a>
        </div>
    }
    else
    {
        <!-- Statistiques -->
        <div class="recommendations-stats">
            <div class="stats-number">@Model.RecommendedBooks.Count</div>
            <div class="stats-label">Livre@(Model.RecommendedBooks.Count > 1 ? "s recommandés" : " recommandé")</div>
        </div>

        <!-- Grille de cartes -->
        <div class="books-grid">
            @foreach (var b in Model.RecommendedBooks)
            {
                <div class="book-card">
                    <div class="book-image-container">
                        @if (!string.IsNullOrEmpty(b.PicturePath))
                        {
                            <img src="~/images/@b.PicturePath" alt="@b.Title" class="book-image" />
                        }
                        else
                        {
                            <div class="no-image">
                                <span class="material-symbols-outlined" style="font-size: 4rem;">menu_book</span>
                            </div>
                        }
                        
                        <span class="recommended-badge">
                            <span class="material-symbols-outlined" style="font-size: 16px;">star</span>
                            <span>Recommandé</span>
                        </span>
                        
                        @if (b.AvailableCopies > 3)
                        {
                            <span class="availability-badge available">
                                <span class="material-symbols-outlined" style="font-size: 14px;">check</span>
                                Disponible
                            </span>
                        }
                        else if (b.AvailableCopies > 0)
                        {
                            <span class="availability-badge limited">
                                <span class="material-symbols-outlined" style="font-size: 14px;">warning</span>
                                Limité
                            </span>
                        }
                    </div>

                    <div class="book-content">
                        <h3 class="book-title">@b.Title</h3>
                        <div class="book-author">
                            <span class="material-symbols-outlined" style="font-size: 18px;">person</span>
                            <span>@(b.Author != null ? $"{b.Author.FirstName} {b.Author.LastName}" : "Auteur inconnu")</span>
                        </div>

                        <div class="book-details">
                            @if (b.Category != null)
                            {
                                <div class="book-detail-item">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">category</span>
                                    <span>@b.Category.Name</span>
                                </div>
                            }
                            <div class="book-detail-item">
                                <span class="material-symbols-outlined" style="font-size: 18px;">inventory</span>
                                <span>@b.AvailableCopies/@b.TotalCopies exemplaires disponibles</span>
                            </div>
                        </div>

                        <div class="book-actions">
                            <a class="btn-card btn-details" asp-page="/Books/Details" asp-route-id="@b.BookID">
                                <span class="material-symbols-outlined" style="font-size: 18px;">visibility</span>
                                <span>Détails</span>
                            </a>
                            <a class="btn-card btn-borrow" asp-page="/Borrowing/Issue">
                                <span class="material-symbols-outlined" style="font-size: 18px;">library_add</span>
                                <span>Emprunter</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>