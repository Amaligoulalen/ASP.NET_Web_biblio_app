@page
@model gestion_biblio.Pages.User.HistoryModel
@{
    ViewData["Title"] = "Historique des emprunts";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        vertical-align: middle;
    }

    .history-container {
        max-width: 1400px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .history-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: #FFF8DC;
        padding: 40px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 20px rgba(139, 69, 19, 0.3);
        text-align: center;
    }

    .history-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .history-subtitle {
        font-size: 1.1rem;
        margin-top: 10px;
        opacity: 0.9;
    }

    .history-stats {
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        text-align: center;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #8B4513;
    }

    .stats-label {
        color: #A0522D;
        font-weight: 600;
    }

    .history-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .borrow-card {
        background: linear-gradient(145deg, #FFF8DC 0%, #F5F5DC 100%);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(160, 82, 45, 0.1);
        border: 2px solid #FFE4C4;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .borrow-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(160, 82, 45, 0.2);
        border-color: #D2B48C;
    }

    .book-image-container {
        height: 200px;
        background: linear-gradient(135deg, #D2B48C 0%, #FFE4C4 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .no-image {
        font-size: 4rem;
        color: #A0522D;
    }

    .status-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .status-returned {
        background-color: #90EE90;
        color: #2d5016;
        border: 2px solid #78c878;
    }

    .status-active {
        background-color: #87CEEB;
        color: #1a5276;
        border: 2px solid #5dade2;
    }

    .status-overdue {
        background-color: #FFB6C1;
        color: #8B1538;
        border: 2px solid #FF9BAE;
    }

    .borrow-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .book-title {
        color: #8B4513;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 15px;
        line-height: 1.3;
        min-height: 2.4em;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .borrow-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 15px;
        flex: 1;
    }

    .detail-row {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #A0522D;
        font-size: 0.95rem;
    }

    .detail-label {
        font-weight: 600;
        color: #8B4513;
        min-width: 100px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .detail-value {
        flex: 1;
    }

    .fine-amount {
        background: linear-gradient(135deg, #FFE4C4 0%, #FFF8DC 100%);
        padding: 12px;
        border-radius: 10px;
        border-left: 4px solid #A0522D;
        margin-top: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
    }

    .fine-zero {
        border-left-color: #78c878;
        color: #2d5016;
    }

    .fine-positive {
        border-left-color: #FF9BAE;
        color: #8B1538;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #A0522D;
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 20px;
    }

    .empty-text {
        font-size: 1.3rem;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .history-title {
            font-size: 1.8rem;
            flex-direction: column;
            gap: 10px;
        }

        .history-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="history-container">
    <!-- Header -->
    <div class="history-header">
        <h1 class="history-title">
            <span class="material-symbols-outlined" style="font-size: 3rem;">history</span>
            <span>Historique des Emprunts</span>
        </h1>
        <p class="history-subtitle">Consultez tous vos emprunts passés et actuels</p>
    </div>

    <!-- Statistiques -->
    <div class="history-stats">
        <div class="stats-number">@Model.Records.Count</div>
        <div class="stats-label">Emprunt@(Model.Records.Count > 1 ? "s" : "") au total</div>
    </div>

    @if (Model.Records.Any())
    {
        <!-- Grille de cartes -->
        <div class="history-grid">
            @foreach (var record in Model.Records)
            {
                var isReturned = record.ReturnDate.HasValue;
                var isOverdue = !isReturned && record.DueDate < DateTime.UtcNow.Date;
                
                <div class="borrow-card">
                    <div class="book-image-container">
                        @if (!string.IsNullOrEmpty(record.Book?.PicturePath))
                        {
                            <img src="~/images/@record.Book.PicturePath" alt="@record.Book.Title" class="book-image" />
                        }
                        else
                        {
                            <div class="no-image">
                                <span class="material-symbols-outlined" style="font-size: 4rem;">menu_book</span>
                            </div>
                        }
                        
                        @if (isReturned)
                        {
                            <span class="status-badge status-returned">
                                <span class="material-symbols-outlined" style="font-size: 16px;">check_circle</span>
                                <span>Retourné</span>
                            </span>
                        }
                        else if (isOverdue)
                        {
                            <span class="status-badge status-overdue">
                                <span class="material-symbols-outlined" style="font-size: 16px;">warning</span>
                                <span>En retard</span>
                            </span>
                        }
                        else
                        {
                            <span class="status-badge status-active">
                                <span class="material-symbols-outlined" style="font-size: 16px;">schedule</span>
                                <span>En cours</span>
                            </span>
                        }
                    </div>

                    <div class="borrow-content">
                        <h3 class="book-title">@(record.Book?.Title ?? "Livre inconnu")</h3>

                        <div class="borrow-details">
                            <div class="detail-row">
                                <div class="detail-label">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">calendar_today</span>
                                    <span>Emprunté le</span>
                                </div>
                                <div class="detail-value">@record.IssueDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">event</span>
                                    <span>À retourner le</span>
                                </div>
                                <div class="detail-value">@record.DueDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="detail-row">
                                <div class="detail-label">
                                    <span class="material-symbols-outlined" style="font-size: 18px;">assignment_return</span>
                                    <span>Retourné le</span>
                                </div>
                                <div class="detail-value">
                                    @if (record.ReturnDate.HasValue)
                                    {
                                        @record.ReturnDate.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span style="font-style: italic; color: #D2B48C;">Pas encore retourné</span>
                                    }
                                </div>
                            </div>
                        </div>

                        @if (record.FineAmount > 0)
                        {
                            <div class="fine-amount fine-positive">
                                <span class="material-symbols-outlined">payments</span>
                                <span>Amende : @record.FineAmount.ToString("C")</span>
                            </div>
                        }
                        else
                        {
                            <div class="fine-amount fine-zero">
                                <span class="material-symbols-outlined">check_circle</span>
                                <span>Aucune amende</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <span class="material-symbols-outlined" style="font-size: 5rem;">library_books</span>
            </div>
            <div class="empty-text">
                Vous n'avez pas encore emprunté de livres
            </div>
            <div style="margin-top: 20px;">
                <a asp-page="/Books/Index" class="btn-add" style="display: inline-block; width: auto;">
                    <span class="material-symbols-outlined">search</span>
                    Parcourir les livres
                </a>
            </div>
        </div>
    }
</div>

<style>
    .btn-add {
        background-color: #FFE4C4;
        color: #8B4513;
        padding: 12px 30px;
        border-radius: 10px;
        font-weight: 600;
        border: 2px solid #D2B48C;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add:hover {
        background-color: #FFF8DC;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(160, 82, 45, 0.2);
        color: #8B4513;
    }
</style>